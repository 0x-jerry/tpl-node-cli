{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "lib": ["ESNext"],

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "dev.ts"]
}
