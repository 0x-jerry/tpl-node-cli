{
  "name": "tpl-node-cli",
  "description": "",
  "version": "0.0.0",
  "main": "./dist/export.js",
  "types": "./dist/export.d.ts",
  "type": "module",
  "license": "MIT",
  "bin": {
    "x-cli": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 18"
  },
  "publishConfig": {
    "access": "public",
