    "prompts": "^2.4.2",
    "unconfig": "^0.3.10"
  },
  "devDependencies": {
    "@0x-jerry/x-release": "^0.3.8",
    "@types/debug": "^4.1.8",
    "@types/node": "^20.4.9",
    "@types/prompts": "^2.4.4",
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  }
